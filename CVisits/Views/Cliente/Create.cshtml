@model CVisits.ViewModels.ClienteAdd

@{
    ViewBag.Title = "Agregar Cliente";
}

<h2>Agregar. <strong>Cliente</strong></h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Cliente</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Cliente.Descripcion)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Cliente.Descripcion)
            @Html.ValidationMessageFor(model => model.Cliente.Descripcion)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div class="clear-fix"></div>

<table>
    <tr>
        <th>ID</th>
        <th>Descripción</th>
    </tr>

    @foreach (var item in Model.Clientes)
    {
        <tr>
            <td>@item.ClienteID</td>
            <td>@item.Descripcion</td>
        </tr>
    }

</table>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
