@model CVisits.Models.Visita

<!-- Initialize Select2 -->
<script>
    //In this case all SELECTs uses select2...
    $(document).ready(function () { $("select").select2(); });
</script>

<script type="text/javascript">
    $(document).ready(function () {
        //$("#FechaPlanificada").datetimepicker({ dateFormat: 'dd-mm-yy' });
        //$("#FechaPlanificada").datetimepicker();

        $("#FechaPlanificada").datetimepicker({
            dateFormat: 'yy-mm-dd',
            timeFormat: 'HH:mm'
        });


        $("#FechaTermino").datetimepicker({
            dateFormat: 'yy-mm-dd',
            timeFormat: 'HH:mm'
        });

    });
</script>

@{
    ViewBag.Title = "Programar Visita";
}



<div class="row">

    <div class="col-md-4">
        <h2>Schedule Visit</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            @Html.HiddenFor(model => model.FechaIngreso, new { @Value = DateTime.Today })                
                
            <div class="form-group">
                @Html.LabelFor(model => model.FechaPlanificada, "Visit's Date")
                @Html.TextBoxFor(model => model.FechaPlanificada, new { @class = "form-control", @placeholder = "Enter date..." })
                @Html.ValidationMessageFor(model => model.FechaPlanificada)
            </div>
                
            <div class="form-group">
                @Html.LabelFor(model => model.FechaTermino, "End Date")
                @Html.TextBoxFor(model => model.FechaTermino, new { @class = "form-control", @placeholder = "Enter date..." })
                @Html.ValidationMessageFor(model => model.FechaTermino)
            </div>
                    
            <div class="form-group">
                @Html.LabelFor(model => model.Descripcion, "Description")
                @Html.TextAreaFor(model => model.Descripcion, new { @class = "form-control", @rows = "5" })
                @Html.ValidationMessageFor(model => model.Descripcion)
            </div>    
    
            <div class="form-group">
                @Html.LabelFor(model => model.EstadoVisitaID, "Visit Status")
                @Html.DropDownList("EstadoVisitaID", "Select..")
                @Html.ValidationMessageFor(model => model.EstadoVisitaID)
            </div>
              
            <div class="form-group">
                @Html.LabelFor(model => model.LineaProductoID, "Product Line")
                @Html.DropDownList("LineaProductoID", "Select..")
                @Html.ValidationMessageFor(model => model.LineaProductoID)
            </div>
        
            <div class="form-group">
                @Html.LabelFor(model => model.TipoVisitaID, "Visit Type")
                @Html.DropDownList("TipoVisitaID", "Select..")
                @Html.ValidationMessageFor(model => model.TipoVisitaID)
            </div>            
            
            <div class="form-group">
                @Html.LabelFor(model => model.ClienteID, "Client")
                @Html.DropDownList("ClienteID", "Select..")
                @Html.ValidationMessageFor(model => model.ClienteID)
            </div>
    
            <div class="form-group">
                @Html.LabelFor(model => model.UserId, "Visit scheduled by...")
                @Html.DropDownList("UserId", "Select..")
                @Html.ValidationMessageFor(model => model.UserId)
            </div>    
        
            <button type="submit" class="btn btn-success">
                <span class="glyphicon glyphicon-floppy-save"></span> Save
            </button>
            
            <a href="@Url.Action("Index")" class="btn btn-primary"><span class="glyphicon glyphicon-calendar"></span> Back to Calendar</a>
                        

        }

    </div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
