@model CVisits.Models.ClienteContacto

<!-- Initialize Select2 -->
<script>
    //In this case all SELECTs uses select2...
    $(document).ready(function () { $("select").select2(); });
</script>

@{
    ViewBag.Title = "Assign Contact Information";
}

<h2>Assign Contact Information</h2>

<div class="row">

    <div class="col-md-4">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
 
            <div class="form-group">
                @Html.LabelFor(model => model.Nombre, "Contact's Name")
                @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", @placeholder = "Enter name..." })
                @Html.ValidationMessageFor(model => model.Nombre)
            </div>
            
            <div class="form-group">
                @Html.LabelFor(model => model.Email, "Contact's Email Address")
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Enter valid email..." })
                @Html.ValidationMessageFor(model => model.Email)
            </div>
            
            <div class="form-group">
                @Html.LabelFor(model => model.Telefono, "Phone Number")
                @Html.TextBoxFor(model => model.Telefono, new { @class = "form-control", @placeholder = "+569XXXXXXXX" })
                @Html.ValidationMessageFor(model => model.Telefono)
            </div>            
            
            <div class="form-group">
                @Html.LabelFor(model => model.ClienteID, "Choose Contact's Company")
                @Html.DropDownList("ClienteID", "--- Clients List---")
                @Html.ValidationMessageFor(model => model.ClienteID)
            </div>


            <button type="submit" class="btn btn-success">
                <span class="glyphicon glyphicon-floppy-save"></span> Save
            </button>
            
            <a href="@Url.Action("Index")" class="btn btn-primary"><span class="glyphicon glyphicon-calendar"></span> Back to List</a>

        }

    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
